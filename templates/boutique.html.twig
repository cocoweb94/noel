{# templates/default/boutique.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    {% include 'header.html.twig' %}

    <div class="main">
        <div class="shop_top">
            <div class="content-top">
                 <h2>Boutique</h2>
            </div>

            <div class="container">
                {% if paniervide %}
                    <div class="row team_box" style="border: thick double #C82829;">
                        <h3 class="m_3" style="color:#C82829;">Panier vide</h3>
                        <div class="col-1 team1" style="text-align: center">
                            <p style="color:#C82829;">Nous sommes d&eacute;sol&eacute; mais votre panier est vide ou les articles ne sont plus disponible</p>
                            <div class="clear"> </div>
                        </div>
                    </div>
                {% endif %}
                {% if confcommande %}
                    <div class="row team_box" style="border: thick double #449d44;">
                        <h3 class="m_3" style="color:#449d44;">Commande valid&eacute;</h3>
                        <div class="col-1 team1" style="text-align: center">
                            <p style="color:#449d44;">Nous avons enregistr&eacute; votre commande, vous pourrez venir la chercher le 31 d&eacute;cembre 2020 au temple</p>
                            <div class="clear"> </div>
                        </div>
                    </div>
                {% endif %}
                <div class="row" style="margin-bottom: 5%;">

                    {% for product in products %}
                        <div class="col-md-3 shop_box">
                            <!--<a href="single.html">-->
                                <img src="images/{{ product.photo|raw }}" class="img-responsive" alt=""/>
                                <div class="shop_desc">
                                    <h3>{{ product.name|raw }}</h3>
                                    <p>{{ product.description|raw }}</p>
                                    <span class="actual">{{ product.price|raw }}&euro;</span><br>
                                    <ul class="buttons">
                                        <li class="cart" data-id="{{ product.id }}"><a href="#">Ajouter au panier</a></li>
                                        <div class="clear"> </div>
                                    </ul>
                                </div>
                            <!--</a>-->
                        </div>

                        {% if loop.index is divisible by(4) %}
                            </div>
                            <div class="row">
                        {% endif %}

                    {% else %}
                        <div><em>Nous n'avons plus de marchandise en stock pour le moment.</em></div>
                    {% endfor %}
                </div>
                <ul class="pagination">
                    {% for i in 1..nbpage %}
                        <li class="page-item {% if i == page %}active{% endif %}"><a href="{{ path('boutique', { 'page': i}) }}">{{ i }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}